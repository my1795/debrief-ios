{
  "paths": {
    "/v1/stats/summary": {
      "get": {
        "tags": [
          "Stats"
        ],
        "summary": "Get usage summary",
        "description": "Get aggregated usage summary for a specific period",
        "operationId": "getSummary",
        "parameters": [
          {
            "name": "period",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": "DAILY",
              "enum": [
                "DAILY",
                "WEEKLY",
                "MONTHLY"
              ]
            }
          },
          {
            "name": "date",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Summary retrieved",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/UsageSummaryResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/stats/summaries": {
      "get": {
        "tags": [
          "Stats"
        ],
        "summary": "Get usage summaries",
        "description": "Get list of usage summaries for a date range",
        "operationId": "getSummaries",
        "parameters": [
          {
            "name": "period",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": "DAILY",
              "enum": [
                "DAILY",
                "WEEKLY",
                "MONTHLY"
              ]
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Summaries retrieved",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UsageSummaryResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/stats/quota": {
      "get": {
        "tags": [
          "Stats"
        ],
        "summary": "Get user quota",
        "description": "Get current subscription quota and usage",
        "operationId": "getQuota",
        "responses": {
          "200": {
            "description": "Quota retrieved",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/UserQuotaResponse"
