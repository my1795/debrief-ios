    },
    "/v1/stats/quota/check": {
      "get": {
        "tags": [
          "Stats"
        ],
        "summary": "Check if action is allowed",
        "description": "Check if user has quota remaining for a specific action",
        "operationId": "checkQuota",
        "parameters": [
          {
            "name": "action",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "RECORDING_CREATED",
                "TRANSCRIPTION_COMPLETED",
                "AI_SUMMARY_GENERATED",
                "DEBRIEF_EXPORTED"
              ]
            }
          },
          {
            "name": "durationSec",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Quota check completed",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/QuotaCheckResponse"
                }
              }
            }
          }
        }
      }
    },
