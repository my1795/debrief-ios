            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 5
            }
          },
          {
            "name": "metric",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": "totalRecordingSec"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Top contacts retrieved",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
